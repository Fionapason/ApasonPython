<GUI_GridLayout>:

    cols: 5

    pt_pump: pt_pump
    system_on: system_on

    Label:
        font_size: 25
        text: str(root.diluate_in_label)
    Label:
        font_size: 25
        text: str(root.diluate_out_label)
    Label:
        font_size: 25
        text: str(root.output_flow_label)
    Label:
        font_size: 25
        text: str(root.on_off_label)

    Switch:
        id: system_on
        active: False
        on_active: root.on_off_switch_callback(self, self.active, pt_pump)


    Label:
        font_size: 25
        text: str(root.diluate_in_display)
    Label:
        font_size: 25
        text: str(root.diluate_out_display)
    Label:
        font_size: 25
        text: str(root.output_flow_display)

    Label:
        font_size: 25
        text: str(root.pt_label)

    Switch:
        id: pt_pump
        active: True
        on_active: root.pt_switch_callback(self, self.active)
        disabled: True